{
    "manifest_version": 3,
    "name": "Bitcoin Donation Extension",
    "version": "1.0",
    "description": "Generate Bitcoin testnet donation addresses and view wallet info.",
    "permissions": [
      "activeTab",
      "scripting"
    ],
    "host_permissions": [
      "http://127.0.0.1:5001/*"
    ],
    "action": {
      "default_popup": "popup.html"
    }
  }
  